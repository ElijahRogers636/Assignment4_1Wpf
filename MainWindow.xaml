<Window x:Class="Assignment4_1Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment4_1Wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <DataGrid x:Name="ContactData" Height="200" Width="500" HorizontalAlignment="Center" Margin="12,21,0,0" VerticalAlignment="Center" RowHeight="30" ColumnWidth="100"/>
            <TextBox x:Name="txtSearch" Margin="160,10,220,0">Enter First and Last Name</TextBox>
            <Button x:Name="btnSearch" Margin="600,-20,144,52" Click="btnSearch_Click">Search</Button>
            <Button x:Name="btnAdd" Margin="600,-20,144,52" Click="btnAdd_Click">Add Contact</Button>
            <TextBox x:Name="txtRemove" Margin="160,10,220,0">Enter First and Last Name</TextBox>
            <Button x:Name="btnRemove" Margin="600,-20,144,52" Click="btnRemove_Click">Remove Contact</Button>
        </StackPanel>
        
    </Grid>
</Window>
